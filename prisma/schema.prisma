// schema1.prisma
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL_1")
}

generator client {
  provider = "prisma-client-js"
}


model Order {
  id        Int         @id @default(autoincrement())
  username  String
  items     OrderItem[] // This remains the same, but we will insert correctly
  createdAt DateTime    @default(now())
}

model Order2 {
  id          Int      @id @default(autoincrement())
  tableNumber Int
  items       String
  createdAt   DateTime @default(now())
}

model Menu {
  id          Int     @id @default(autoincrement())
  itemName    String
  price       Float
  description String
  imageUrl    String
  category    String
  createdAt   DateTime @default(now())
}

model OrderItem {
  id       Int     @id @default(autoincrement())
  order    Order   @relation(fields: [orderId], references: [id])
  orderId  Int
  itemName String
  price    Int
  quantity Int
  imageUrl String
}

model user {
  id       Int     @id @default(autoincrement())
  email    String  @unique(map: "User_email_key")
  username String  @unique(map: "User_username_key")
  password String
  name     String?
}



